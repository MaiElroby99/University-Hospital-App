<!--                    app:layout_constraintTop_toTopOf="@id/layoyt_doctor_titles"-->
<!--                    app:layout_constraintBottom_toBottomOf="@id/layoyt_doctor_titles"/>-->










            </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </HorizontalScrollView>-->

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


