<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="70dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">



    <ImageView
        android:id="@+id/header_img_nurse"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/medical_counseling"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/header_title_nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University Hospital"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/header_img_nurse"
        app:layout_constraintTop_toTopOf="@id/header_img_nurse"
        app:layout_constraintBottom_toBottomOf="@id/header_img_nurse"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_nurse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title_nurse"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/gray"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:src="@drawable/person"/>

    <TextView
        android:id="@+id/user_name_nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahmed Ali"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_img_nurse"
        app:layout_constraintStart_toStartOf="@id/profile_img_nurse"
        app:layout_constraintEnd_toEndOf="@id/profile_img_nurse"
        />
    <TextView
        android:id="@+id/email_nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahmed@gmail.com"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/user_name_nurse"
        app:layout_constraintStart_toStartOf="@id/profile_img_nurse"
        app:layout_constraintEnd_toEndOf="@id/profile_img_nurse"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change password"
        android:textSize="20sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/email_nurse"
        app:layout_constraintStart_toStartOf="@id/profile_img_nurse"
        app:layout_constraintEnd_toEndOf="@id/profile_img_nurse"
        />

</androidx.constraintlayout.widget.ConstraintLayout>