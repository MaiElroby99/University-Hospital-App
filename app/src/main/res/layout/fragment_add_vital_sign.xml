            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/respiratory_rate_input_vital_sign"
            app:layout_constraintTop_toBottomOf="@id/gender_vital_sign" />

        <TextView
