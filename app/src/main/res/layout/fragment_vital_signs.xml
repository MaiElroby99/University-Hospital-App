<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DoctorUserFragments.VitalSignsFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vital Signs Patient Record"
        android:padding="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/Hview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/patient_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient's Name:"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amira"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/patient_name_tv"
                app:layout_constraintTop_toTopOf="parent"/>



            <TextView
                android:id="@+id/patient_gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="70dp"
                app:layout_constraintStart_toEndOf="@id/patient_name"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/patient_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/patient_gender_tv"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/patient_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="70dp"
                app:layout_constraintStart_toEndOf="@id/patient_gender"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/patient_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/patient_age_tv"
                app:layout_constraintTop_toTopOf="parent"/>



            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                />

            <TextView
                android:id="@+id/Time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/date_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="160dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/Time_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="130dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/bloodPressure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Pressure"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/weight_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="140dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/pulseRate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulse Rate"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/bloodPressure_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/temprature_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temprature"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/pulseRate_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="140dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/respiratoryRate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raspiratory Rate"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/temprature_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/signature_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signature"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/respiratoryRate_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="80dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/comments_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/signature_tv"
                app:layout_constraintTop_toBottomOf="@id/patient_name_tv"
                android:layout_marginStart="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"/>


            <View
                android:id="@+id/HLine"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_tv" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/DoctorinpatientVitalSigns_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/HLine"
                tools:listitem="@layout/item_inpatient_vitalsigns_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


