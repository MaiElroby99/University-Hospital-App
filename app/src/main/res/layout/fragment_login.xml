<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragments.LoginFragment"
    android:background="@drawable/login_bg"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over">

    <View
        android:id="@+id/bg"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/whiteTransparent"/>

    <TextView
        android:id="@+id/loginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:text="login"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintTop_toTopOf="@id/bg"/>
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="18sp"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/loginTv"
        app:layout_constraintStart_toStartOf="@id/bg"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/idInput"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textinput_design"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/id"/>

    <TextView
        android:id="@+id/passTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/idInput"
        app:layout_constraintStart_toStartOf="@id/bg"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/passInput"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textinput_design"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/passTv"/>


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remember me"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/passInput"
        android:layout_marginStart="30dp"
        />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="sign in"
        android:textAllCaps="false"
        android:background="@drawable/loginbtn_design"
        app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/checkbox"/>




